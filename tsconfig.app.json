{
  "include": ["env.d.ts", "src/**/*.vue", "src/**/**/*.vue", "components.d.ts","src/**/*.*"],

  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "public/*": [
        "./public/*"
      ],
      "views/*": [
        "./src/views/*"
      ],
      "src/*": [
        "./src/*"
      ],
      "pages/*": [
        "./src/components/pages/*"
      ],
      "node_module": [
        "../node_modules/*"
      ],
      "common/*": [
        "./src/common/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "base/*": [
        "./src/components/base/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "repository/*": [
        "./src/api/repository/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "stores/*": [
        "./src/stores/*"
      ],
      "subpage/*":[
        "./src/components/subpage/*"
      ],
      "subcomponent/*":[
        "./src/components/subcomponent/*"
      ],
      "tools/*":[
        "./src/components/tools/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "moduleResolution": "node",
  },
}